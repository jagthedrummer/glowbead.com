<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Glowbead" %></title>

    <meta property="og:url"                content="http://www.glowbead.com/" >
    <meta property="og:type"               content="website" >
    <meta property="og:title"              content="Glowbead">
    <meta property="og:description"        content="Catch Glowbead at NMF on April 25 at 6 pm. Visit the site to hear our newest recording, The Minute You're Gone." >
    <meta property="og:image"              content="http://www.glowbead.com/images/glowbead.jpg" >
    <meta property="og:audio"              content="http://www.glowbead.com/mp3/Glowbead-The_Minute_You're_Gone.mp3/" >

    <%= stylesheet_link_tag  "all" %>
    <%= javascript_include_tag  "all" %>
  </head>
  
  <body class="<%= page_classes %>">
    <%= yield %>
  </body>
</html>
